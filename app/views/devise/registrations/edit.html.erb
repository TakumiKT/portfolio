<div class="card auth-card">
  <h2 class="auth-title">ユーザー情報の変更</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
               html: { method: :put, multipart: true, data: { turbo: false }, class: "auth-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-section">
      <h3 class="auth-section__title">ユーザーアイコン</h3>

      <div class="avatar-row">
        <div class="avatar-preview">
          <% if resource.avatar.attached? %>
            <%= image_tag resource.avatar.variant(resize_to_fill: [80, 80]),
                          alt: "ユーザーアイコン", class: "avatar-img" %>
          <% else %>
            <%= image_tag "default_avatar.png", alt: "デフォルトアイコン", class: "avatar-img" %>
          <% end %>
        </div>

        <div class="avatar-input">
          <%= f.label :avatar, "画像を選択", class: "auth-label" %>
          <%= f.file_field :avatar, accept: "image/*", class: "auth-file" %>
          <p class="help-text">※PNG/JPGなど。正方形に近い画像がおすすめです。</p>
        </div>
      </div>
    </div>

    <div class="auth-section">
      <h3 class="auth-section__title">基本情報</h3>

      <div class="field">
        <%= f.label :name, "ユーザー名", class: "auth-label" %>
        <%= f.text_field :name, autocomplete: "name", class: "auth-input" %>
      </div>
      
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "auth-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="note">
          現在、<strong><%= resource.unconfirmed_email %></strong> への確認メール待ちです。
        </p>
      <% end %>
    </div>

    <div class="auth-section">
      <h3 class="auth-section__title">パスワード変更（任意）</h3>

      <div class="field">
        <%= f.label :password, "新しいパスワード", class: "auth-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
        <p class="help-text">※変更しない場合は空欄のままでOKです。</p>

        <% if @minimum_password_length %>
          <p class="help-text">※<%= @minimum_password_length %>文字以上</p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "auth-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "現在のパスワード", class: "auth-label" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "auth-input" %>
        <p class="help-text">※メール/パスワードを変更する場合のみ必要です（アイコン変更だけなら不要）。</p>
      </div>
    </div>

    <div class="actions auth-actions">
      <%= f.submit "更新する", class: "btn" %>
      <%= link_to "戻る", memos_path, class: "btn btn--sub" %>
    </div>
  <% end %>

  <hr class="auth-divider">

  <div class="danger-zone">
    <h3 class="danger-title">アカウント削除</h3>
    <p class="help-text">※削除するとデータは元に戻せません。</p>

    <%= button_to "アカウントを削除する",
                  registration_path(resource_name),
                  method: :delete,
                  data: { turbo_confirm: "本当にアカウントを削除しますか？（元に戻せません）" },
                  class: "btn btn--danger" %>
  </div>
</div>
